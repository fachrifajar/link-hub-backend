model User {
  id              String        @id @unique @default(cuid())
  pwd             String
  email           String        @unique
  username        String        @unique
  profile_picture String?
  description     String?
  created_at      DateTime      @default(now())
  updated_at      DateTime      @default(now()) @updatedAt
  is_new_user     Int?          @default(0)
  link            String?
  post_picture    String?
  posts           Post[]
  ref_token       String?
  Item            Item[]
  SocialMedia     SocialMedia[]
}

model Post {
  id                String        @id @unique @default(cuid())
  title             String
  use_title         String        @default("1")
  bg_color          String        @default("#FFFFFF")
  bg                String        @default("flat")
  bg_direction      String        @default("gradientUp")
  button_option     String        @default("fill")
  button_color      String        @default("#e0e0f4")
  button_font_color String        @default("#000000")
  font_color        String        @default("#000000")
  url               String        @unique @default(cuid())
  user              User          @relation(fields: [user_id], references: [id])
  user_id           String
  created_at        DateTime      @default(now())
  updated_at        DateTime      @default(now()) @updatedAt
  Item              Item[]
  items             String[]      @default([])
  SocialMedia       SocialMedia[]
}

model Item {
  id         String   @id @unique @default(cuid())
  title      String
  url        String
  post       Post     @relation(fields: [post_id], references: [id])
  post_id    String
  user       User     @relation(fields: [user_id], references: [id])
  user_id    String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
}

model SocialMedia {
  id        String   @id @unique @default(cuid())
  platform  String
  url       String
  post      Post     @relation(fields: [post_id], references: [id])
  post_id   String
  user      User     @relation(fields: [user_id], references: [id])
  user_id   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
